[user]
	name = Steven Bower
	email = steven@turnwheel.com

# Makes pushing easier on master branch
[branch "master"]
	remote = origin
	merge = refs/heads/master

# Start other core configuration
[alias]
	unstage = reset HEAD --
	last = log -1 HEAD
	co = checkout
	exportfiles = !sh -c 'git diff $0 --name-only | "while read files; do mkdir -p \"$1/$(dirname $files)\"; cp -vf $files $1/$(dirname $files); done"'
	subupdate = submodule foreach git pull origin master
	squash = merge --squash --no-commit $0 | commit

[color]
	ui = yes

[core]
	autocrlf = input
	excludesfile = ~/.gitignore

# Graphical
[giggle]
	main-window-maximized = false
	main-window-geometry = 1232x794+182+49
	history-view-vpane-position = 486
	main-window-view = HistoryView
