[user]
	name = Steven Bower
	email = bowerblu@gmail.com
	signingkey = B44287D9

# Makes pushing easier on master branch
[branch "master"]
	remote = origin
	merge = refs/heads/master

# Short-hand for common servers
[url "git@git.turnwheel.com"]
	insteadOf = twgit

[url "git@git.bpwebdesign.com"]
	insteadOf = bpgit

[url "git@github.com"]
	insteadOf = gh

# Start other core configuration
[alias]
	credit = commit --amend --author "$1 <$2>" -C HEAD
	unstage = reset HEAD --
	fuckit = reset --hard HEAD
	last = log -1 HEAD --stat --relative-date
	subupdate = submodule foreach git fetch origin
	squash = merge --squash --no-commit
	mff = merge --no-ff --log
	new = log master..origin/master --stat
	ll = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	lls = !git ll --stat
	exportfiles = !sh -c 'git diff $0 --name-only | "while read files; do mkdir -p \"$1/$(dirname $files)\"; cp -vf $files $1/$(dirname $files); done"'
	pl = !git fetch origin && git rebase -p origin/$(git_current_branch)

[color]
	ui = yes

[core]
	autocrlf = input
	excludesfile = /Users/blu/.gitignore_global
	editor = nano

[merge]
	conflictstyle = diff3

[rebase]
	stat = yes
	autostash = true
[push]
	default = simple
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[commit]
	gpgsign = true
[credential]
	helper = osxkeychain
[pull]
	rebase = true
