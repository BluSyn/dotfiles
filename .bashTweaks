GREEN="\[\033[0;32m\]"
BROWN="\[\033[0;33m\]"
BLUE="\[\033[0;34m\]"
PURPLE="\[\033[0;35m\]"
CYAN="\[\033[0;36m\]"
LGRAY="\[\033[0;37m\]"
YELLOW="\[\033[0;33m\]"
DGRAY="\[\033[1;30m\]"
WHITE="\[\033[1;37m\]"
RESET="\[\033[1;0m\]"
GIT='$(__git_ps1 "[%s]")'
PS1="[$DGRAY\t$RESET][$BLUE\u$RESET$CYAN@$RESET$PURPLE\h$RESET]: $GREEN\W$RESET$BROWN$GIT$RESET \$$RESET "


