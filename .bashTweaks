# GIT Bash Helpers
# mkdit <name> <server>
mkgit () {
	mkdir $1
	cd $1
	git init .
	git remote add origin $2:$1
	mkdir www docs
	echo 1 > www/placeholder
	echo 2 > docs/placeholder
	git add .
	git commit -a -m 'Initial Commit'
	git push origin master
}

#------------------------------------------
#------ENCRYPTION/DECRYPTION--------------
# requires gpg
# the proper way to use these functions is simply to enter "encrypt filename" or "decrypt filename"
encrypt () {
	gpg -ac "$1"
}

decrypt () {
	gpg -ad "$1"
}

des3 () {
	openssl enc -des3 -salt -in $1 -out $2
}

des3_d () {
	openssl enc -des3 -d -salt -in $1 -out $2
}

aes256 () {
	openssl enc -aes-256-cbc -salt -in $1 -out $2
}

aes256_d () {
	openssl enc -aes-256-cbc -d -salt -in $1 -out $2
}


